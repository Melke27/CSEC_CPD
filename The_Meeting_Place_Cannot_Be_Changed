#include <iostream>
#include <iomanip>
#include <algorithm>
using namespace std;

int main() {
    int n;
    cin >> n;
    long long x[60005], v[60005];
    for (int i = 0; i < n; i++) cin >> x[i];
    for (int i = 0; i < n; i++) cin >> v[i];

    double lo = 0.0, hi = 1e9;
    for (int it = 0; it < 100; it++) {
        double mid = (lo + hi) / 2.0;
        double left = -1e18, right = 1e18;
        for (int i = 0; i < n; i++) {
            left = max(left, x[i] - v[i] * mid);
            right = min(right, x[i] + v[i] * mid);
        }
        if (left <= right) hi = mid;
        else lo = mid;
    }

    cout << fixed << setprecision(12) << hi << "\n";
    return 0;
}
