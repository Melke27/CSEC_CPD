class Solution:
    def dividePlayers(self, skill):
        skill.sort()
        n = len(skill)
        
        target = skill[0] + skill[-1]   # All pairs must sum to this
        total_chemistry = 0
        
        i, j = 0, n - 1
        
        while i < j:
            if skill[i] + skill[j] != target:
                return -1
            total_chemistry += skill[i] * skill[j]
            i += 1
            j -= 1
        
        return total_chemistry
