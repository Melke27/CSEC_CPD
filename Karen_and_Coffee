#include <iostream>
using namespace std;

const int MAX = 200000;
int diff[MAX+5], cnt[MAX+5], ok[MAX+5], pref[MAX+5];

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int n, k, q;
    cin >> n >> k >> q;

    while (n--) {
        int l, r;
        cin >> l >> r;
        diff[l]++;
        diff[r+1]--;
    }

    for (int i = 1; i <= MAX; i++) cnt[i] = cnt[i-1] + diff[i];
    for (int i = 1; i <= MAX; i++) ok[i] = (cnt[i] >= k);
    for (int i = 1; i <= MAX; i++) pref[i] = pref[i-1] + ok[i];

    while (q--) {
        int a, b;
        cin >> a >> b;
        cout << pref[b] - pref[a-1] << '\n';
    }
}
